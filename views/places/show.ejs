<% include ../partials/header %>


<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">Kanguru</p>
            <div class="list-group">
                <li class="list-group-item active">info 1</li>
                <li class="list-group-item">info 2</li>
                <li class="list-group-item">info 3</li>
            </div>
        </div>
        <div class='col-md-9'>
            <div class='thumbnail'>
                <img class="img-responsive" src="<%= place.image %>">
                <div class='caption'>
                    <h4 class="pull-right">$10/Person</h4>
                    <h4><a href="">
                        <%= place.name %>
                    </a></h4>
                    <p><%= place.description %></p>
                    <p>
                        <em>Submitted by <%=place.author.username%></em>
                    </p>
                </div>
            </div>
            <div class="well">
                <div class="text-right">
                    <a class='btn btn-success' href="/places/<%=place._id%>/comments/new">Add New Comment</a>
                </div>
                <hr>
                <% place.comments.forEach(function(comment) { %>
                    <div class="row">
                        <div class="col-md-12">
                            <%= comment.author.username%>
                            <span class='pull-right'>10 days ago</span>
                            <p><%=comment.text%></p>
                        </div>
                    </div>
                    
                <% }) %>
            </div>
        </div>
    </div>
</div>


<% include ../partials/footer %>
