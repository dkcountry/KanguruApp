<% include ../partials/header %>
    
</style>
<div class="container">
    <div class="row">
    
        <h1 style="text-align: center;">Add New Location to <%=itinerary.name%></h1>
        <div style="width: 30%; margin: 25px auto">
            <form action="/itineraries/<%=itinerary._id%>/newplace" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="place[name]" placeholder="name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="place[image]" placeholder="image url">
                </div>
                <div class="form-group">
                        <input class="form-control" type="text" name="place[description]" placeholder="description">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-info btn-block">Submit</button>
                </div>
            </form>
            <a href="/itineraries/<%=itinerary._id%>">Back</a>
        </div>
    </div>


</div>

<% include ../partials/footer %>